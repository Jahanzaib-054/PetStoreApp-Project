@model PetStoreApp_Project.Models.Pet

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div>
    <h1 style="margin:0;">Details</h1>
    <dl class="row">
        <dt style="margin: 22px 12px; font-weight:700;" class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd style="margin: 20px 45px;" class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt style="margin: 22px 8px;font-weight:700;" class="col-sm-2">
            @Html.DisplayNameFor(model => model.price)
        </dt>
        <dd style="margin: 20px 45px;" class="col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt style="margin: 22px 8px;font-weight:700;" class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd style="margin: 20px 45px;" class="col-sm-10">
            <img src="~/Images/@Url.Content(@Model.Image)" height="60px" width="60px">
        </dd>
    </dl>
</div>
<div style="margin-left: 20px;">
    <a class="main-btn" asp-action="Edit" asp-route-id="@Model?.ImgId">Edit</a> |
    <a class="main-btn" asp-action="Index">Back to List</a>
</div>
