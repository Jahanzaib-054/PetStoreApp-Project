@model IEnumerable<PetStoreApp_Project.Models.Pet>

@{
    ViewData["Title"] = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="padding:0.5rem 0;text-align:center;background-color: #ed6335;">
    <div style="display:grid;padding:6rem;gap:3rem;grid-template-columns:repeat(4, minmax(285px , 1fr));grid-auto-rows:375px;align-items:center;justify-content:center;overflow:hidden;">
@foreach (var item in Model) {
            <div width="100rem" style="border:2px solid black;background-color:#FFFFFF;border-radius:8px;margin:4rem 0;">
                <img src="~/Images/@Url.Content(@item.Image)" style="object-fit:fill;" height="100px" width="200px">
                <h3 style="border-bottom: 1px groove hsla(0, 0%, 53%, 0.5);margin: 2rem 0 1rem 0;">@Html.DisplayFor(modelItem => item.Name)</h3>
                <p style="border-bottom: 1px groove hsla(0, 0%, 53%, 0.5);margin: 2rem 0 1rem 0;">@Html.DisplayFor(modelItem => item.price)</p>
                <button style="width: 100%;padding: 0.6rem 1.2rem;background-color:#65c178;border: none;border-radius: 8px;color:#FFFFFF;font-weight: 400;font-size: 1.2rem;">Buy</button>
        </div>
}
    </div>
</div>
