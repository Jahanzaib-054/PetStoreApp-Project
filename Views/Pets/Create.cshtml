@model PetStoreApp_Project.Models.Pet

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row">
    <h1 style="margin:0;">Create</h1>
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="margin: 22px 8px;" class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input style="border-radius: 6px; padding: 4px;" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div style="margin: 22px 8px;" class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input style="border-radius: 6px; padding: 4px;" asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div style="display: none;" class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div style="margin: 22px 8px;" class="form-group">
                <label asp-for="ImgFile" class="control-label"></label>
                <input style="border-radius: 6px;background-color:#65c178;" asp-for="ImgFile" type="file" accept="image/png, image/jpeg, image/svg, image/jpg" class="form-control" />
                <span asp-validation-for="ImgFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="display:inline-block; margin: 16px 8px;" class="main-btn">Back to List</a>
</div>

